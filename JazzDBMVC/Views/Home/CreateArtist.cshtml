@{
}
@model JazzDBMVC.Data.Artist

@{
    ViewData["Title"] = "Create Artist";
}

<h1>Create Artist</h1>

<form asp-action="CreateArtist" method="post">
    <div class="form-group">
        <label asp-for="ArtistName"></label>
        <input asp-for="ArtistName" class="form-control" />
        <span asp-validation-for="ArtistName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ArtistUrl"></label>
        <input asp-for="ArtistUrl" class="form-control" />
        <span asp-validation-for="ArtistUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ArtistBlurb"></label>
        <textarea asp-for="ArtistBlurb" class="form-control"></textarea>
        <span asp-validation-for="ArtistBlurb" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ArtistId"></label>
        <textarea asp-for="ArtistId" class="form-control"></textarea>
        <span asp-validation-for="ArtistId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create Artist</button>
</form>